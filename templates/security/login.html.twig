{% extends 'base.html.twig' %}

{% block title %}Eve Toolkit Login{% endblock %}

{% block body %}

    <div class="container">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please sign in</h3>
                    </div>
                    <div class="panel-body">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form action="{{ path('login') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Benutzername" id="username" name="_username" value="{{ last_username }}">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Passwort" type="password" id="password" name="_password" />
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                                    </label>
                                </div>
                                <input type="hidden" name="_target_path" value="/" />
                                <input class="btn btn-lg btn-default btn-block" type="submit" value="Login">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
